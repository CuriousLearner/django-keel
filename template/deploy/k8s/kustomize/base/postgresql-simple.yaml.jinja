apiVersion: v1
kind: Service
metadata:
  name: {{ project_slug | replace("_", "-") }}-pg
spec:
  ports:
    - port: 5432
      targetPort: 5432
  selector:
    app: {{ project_slug | replace("_", "-") }}
    component: postgresql
  clusterIP: None
---
apiVersion: apps/v1
kind: StatefulSet
metadata:
  name: {{ project_slug | replace("_", "-") }}-pg
spec:
  serviceName: {{ project_slug | replace("_", "-") }}-pg
  replicas: 1
  selector:
    matchLabels:
      app: {{ project_slug | replace("_", "-") }}
      component: postgresql
  template:
    metadata:
      labels:
        app: {{ project_slug | replace("_", "-") }}
        component: postgresql
    spec:
      containers:
        - name: postgresql
          image: postgres:17-alpine
          ports:
            - containerPort: 5432
          env:
            - name: POSTGRES_DB
              value: {{ project_slug }}_db
            - name: POSTGRES_USER
              value: {{ project_slug }}_user
            - name: POSTGRES_PASSWORD
              value: changeme
            - name: PGDATA
              value: /var/lib/postgresql/data/pgdata
          volumeMounts:
            - name: postgresql-data
              mountPath: /var/lib/postgresql/data
          resources:
            requests:
              memory: "256Mi"
              cpu: "250m"
            limits:
              memory: "512Mi"
              cpu: "500m"
  volumeClaimTemplates:
    - metadata:
        name: postgresql-data
      spec:
        accessModes: ["ReadWriteOnce"]
        resources:
          requests:
            storage: 1Gi
