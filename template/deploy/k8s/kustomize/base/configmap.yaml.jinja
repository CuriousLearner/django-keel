apiVersion: v1
kind: ConfigMap
metadata:
  name: {{ project_slug }}-config
data:
  DEBUG: "False"
  DJANGO_SETTINGS_MODULE: "config.settings.prod"
  DJANGO_ALLOWED_HOSTS: "{{ project_slug }}.example.com,{{ project_slug }}-web"
  DATABASE_URL: "postgresql://{{ project_slug }}_user:changeme@{{ project_slug }}-pg-rw:5432/{{ project_slug }}_db"
  REDIS_URL: "redis://{{ project_slug }}-redis-master:6379/0"
  CELERY_BROKER_URL: "redis://{{ project_slug }}-redis-master:6379/1"
  EMAIL_BACKEND: "django.core.mail.backends.smtp.EmailBackend"
  EMAIL_HOST: "smtp.example.com"
  EMAIL_PORT: "587"
  EMAIL_USE_TLS: "True"
