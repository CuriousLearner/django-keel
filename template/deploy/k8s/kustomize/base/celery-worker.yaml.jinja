apiVersion: apps/v1
kind: Deployment
metadata:
  name: {{ project_slug | replace("_", "-") }}-celery-worker
  labels:
    app: {{ project_slug | replace("_", "-") }}
    component: celery-worker
spec:
  replicas: 2
  selector:
    matchLabels:
      app: {{ project_slug | replace("_", "-") }}
      component: celery-worker
  template:
    metadata:
      labels:
        app: {{ project_slug | replace("_", "-") }}
        component: celery-worker
    spec:
      containers:
        - name: celery-worker
          image: {{ project_slug | replace("_", "-") }}:latest
          imagePullPolicy: Never
          command: ["/bin/sh", "-c"]
          args:
            - |
              {% if dependency_manager == 'uv' -%}
              uv run celery -A config worker -l info
              {% else -%}
              celery -A config worker -l info
              {% endif -%}
          envFrom:
            - configMapRef:
                name: {{ project_slug | replace("_", "-") }}-config
            - secretRef:
                name: {{ project_slug | replace("_", "-") }}-secrets
          resources:
            limits:
              cpu: 1000m
              memory: 1Gi
            requests:
              cpu: 250m
              memory: 512Mi
