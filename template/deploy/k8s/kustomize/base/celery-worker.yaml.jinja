apiVersion: apps/v1
kind: Deployment
metadata:
  name: {{ project_slug | replace("_", "-") }}-celery-beat
  labels:
    app: {{ project_slug | replace("_", "-") }}
    component: celery-beat
spec:
  replicas: 1
  selector:
    matchLabels:
      app: {{ project_slug | replace("_", "-") }}
      component: celery-beat
  template:
    metadata:
      labels:
        app: {{ project_slug | replace("_", "-") }}
        component: celery-beat
    spec:
      containers:
        - name: celery-beat
          image: {{ project_slug | replace("_", "-") }}:latest
          imagePullPolicy: Never
          command: ["/bin/sh", "-c"]
          args:
            - |
              {% if dependency_manager == 'uv' -%}
              uv run celery -A config beat -l info --scheduler django_celery_beat.schedulers:DatabaseScheduler
              {% else -%}
              celery -A config beat -l info --scheduler django_celery_beat.schedulers:DatabaseScheduler
              {% endif -%}
          envFrom:
            - configMapRef:
                name: {{ project_slug | replace("_", "-") }}-config
            - secretRef:
                name: {{ project_slug | replace("_", "-") }}-secrets
          resources:
            limits:
              cpu: 500m
              memory: 512Mi
            requests:
              cpu: 100m
              memory: 256Mi
