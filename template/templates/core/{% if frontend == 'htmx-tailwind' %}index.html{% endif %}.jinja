{% raw %}{% extends "base.html" %}

{% block content %}{% endraw %}
<div class="px-4 py-12 sm:px-6 lg:px-8">
    <div class="text-center">
        <h1 class="text-4xl font-bold tracking-tight text-gray-900 sm:text-5xl md:text-6xl">
            <span class="block">Welcome to</span>
            <span class="block text-indigo-600">{{ project_name }}</span>
        </h1>
        <p class="mt-3 max-w-md mx-auto text-base text-gray-500 sm:text-lg md:mt-5 md:text-xl md:max-w-3xl">
            {{ project_description }}
        </p>
        <div class="mt-5 max-w-md mx-auto sm:flex sm:justify-center md:mt-8">
            <div class="rounded-md shadow">
                <a href="/api/" class="w-full flex items-center justify-center px-8 py-3 border border-transparent text-base font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 md:py-4 md:text-lg md:px-10">
                    Explore API
                </a>
            </div>
            <div class="mt-3 rounded-md shadow sm:mt-0 sm:ml-3">
                <a href="/admin/" class="w-full flex items-center justify-center px-8 py-3 border border-transparent text-base font-medium rounded-md text-indigo-600 bg-white hover:bg-gray-50 md:py-4 md:text-lg md:px-10">
                    Admin Panel
                </a>
            </div>
        </div>
    </div>

    <!-- Features Grid -->
    <div class="mt-16 grid gap-8 md:grid-cols-3">
        <div class="bg-white overflow-hidden shadow rounded-lg p-6">
            <h3 class="text-lg font-medium text-gray-900">Fast Development</h3>
            <p class="mt-2 text-sm text-gray-500">
                Pre-configured with all the tools you need to build production-ready applications quickly.
            </p>
        </div>
        <div class="bg-white overflow-hidden shadow rounded-lg p-6">
            <h3 class="text-lg font-medium text-gray-900">Scalable</h3>
            <p class="mt-2 text-sm text-gray-500">
                Deploy to Kubernetes, AWS EC2, or any cloud platform with ease.
            </p>
        </div>
        <div class="bg-white overflow-hidden shadow rounded-lg p-6">
            <h3 class="text-lg font-medium text-gray-900">Observable</h3>
            <p class="mt-2 text-sm text-gray-500">
                Built-in monitoring, logging, and tracing for production environments.
            </p>
        </div>
    </div>
</div>
{% raw %}{% endblock %}{% endraw %}
